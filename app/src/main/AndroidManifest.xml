<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.aecc.superdiary" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >

        <activity
            android:name=".Principal"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>

        <activity
            android:name=".Personajes"
            android:label="Personajes"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>

        <activity
            android:name=".BienvenidaActivity"
            android:label="@string/title_activity_bienvenida"
            android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Citas"
            android:label="@string/title_activity_citas"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>

        <activity
            android:name=".Otros"
            android:label="@string/title_activity_otros"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>

        <activity
            android:name=".Calendario"
            android:label="@string/title_activity_calendario"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>

    </application>

</manifest>
